<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Module Image -->

        <ImageView
            android:id="@+id/moduleImageView"
            android:layout_width="79dp"
            android:layout_height="109dp"
            android:background="@drawable/image_border"
            android:contentDescription="Module cover image"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/moduleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Module Title" />

            <TextView
                android:id="@+id/moduleCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:text="Course: Course Name" />

            <TextView
                android:id="@+id/moduleDepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:text="Department: Department Name" />

            <TextView
                android:id="@+id/moduleSemester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:text="Semester: 1st" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/active"
                android:text="Quantity: 10" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/reserveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingVertical="8dp"
                android:text="Add to Cart"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="12sp"
                app:backgroundTint="@color/button"
                app:cornerRadius="4dp"
                app:icon="@drawable/cart_icon"
                app:iconGravity="textStart" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>